---
interface Props {
  id: string
  label: string
  type?: 'text' | 'date' | 'email' | 'password'
  placeholder?: string
  isRequired?: boolean
}

const {
  id,
  label,
  type = 'text',
  placeholder,
  isRequired = false,
} = Astro.props
---

<div class="mb-5">
  <label class="block mb-2 text-sm font-medium text-white" for={id}>
    {label}
  </label>
  <input
    id={id}
    type={type}
    class="block w-full p-2.5 text-sm rounded-lg bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"
    placeholder={placeholder}
    required={isRequired}
  />
</div>

<style>
  input {
    color-scheme: dark;
  }
</style>
